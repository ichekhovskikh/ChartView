<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ChartView">
        <attr name="lineWidth" format="dimension"/>

        <attr name="gridLineWidth" format="dimension"/>
        <attr name="legendLineCount" format="integer"/>
        <attr name="legendTextSize" format="dimension"/>
        <attr name="ordinateLegendLabelMargin" format="dimension"/>

        <attr name="abscissaLegendMarginTop" format="dimension"/>
        <attr name="abscissaLegendCount" format="integer"/>

        <attr name="colorBackground" format="color"/>
        <attr name="colorLegend" format="color"/>
        <attr name="colorGrid" format="color"/>
        <attr name="colorPopupLine" format="color"/>
    </declare-styleable>

    <declare-styleable name="GraphicsView" parent="ChartView">
        <attr name="lineWidth"/>
    </declare-styleable>

    <declare-styleable name="XAxisView" parent="ChartView">
        <attr name="legendTextSize"/>
        <attr name="abscissaLegendMarginTop"/>
        <attr name="abscissaLegendCount"/>
    </declare-styleable>

    <declare-styleable name="YAxisView" parent="ChartView">
        <attr name="legendTextSize"/>
        <attr name="gridLineWidth"/>
        <attr name="legendLineCount"/>
        <attr name="ordinateLegendLabelMargin"/>
    </declare-styleable>

    <declare-styleable name="ChartSelectorView">
        <attr name="colorBackground"/>
        <attr name="colorFrameControl" format="color"/>
        <attr name="colorFogControl" format="color"/>
        <attr name="frameThicknessHorizontal" format="dimension"/>
        <attr name="frameThicknessVertical" format="dimension"/>
        <attr name="frameMinWidthPercent" format="fraction"/>
        <attr name="frameMaxWidthPercent" format="fraction"/>
    </declare-styleable>

    <declare-styleable name="ScrollFrameView" parent="ChartControlView">
        <attr name="frameThicknessHorizontal"/>
        <attr name="frameThicknessVertical"/>
        <attr name="frameMinWidthPercent"/>
        <attr name="frameMaxWidthPercent"/>
    </declare-styleable>

    <declare-styleable name="ChartLayout">
        <attr name="colorBackground"/>
    </declare-styleable>
</resources>