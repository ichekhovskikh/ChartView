<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ChartView">
        <attr name="darkTheme" format="boolean" />

        <attr name="lineWidth" format="dimension" />

        <attr name="gridLineWidth" format="dimension" />
        <attr name="legendLineCount" format="integer" />
        <attr name="legendTextSize" format="dimension" />
        <attr name="ordinateLegendLabelMargin" format="dimension" />

        <attr name="abscissaLegendPaddingLeft"  format="dimension" />
        <attr name="abscissaLegendPaddingRight"  format="dimension" />
        <attr name="abscissaLegendLabelMargin"  format="dimension" />
        <attr name="abscissaLegendMarginTop"  format="dimension" />

        <attr name="lightColorBackground" format="color" />
        <attr name="lightColorLegend" format="color" />
        <attr name="lightColorTitle" format="color" />
        <attr name="lightColorLabel" format="color" />
        <attr name="lightColorGrid" format="color" />

        <attr name="darkColorBackground" format="color" />
        <attr name="darkColorLegend" format="color" />
        <attr name="darkColorTitle" format="color" />
        <attr name="darkColorLabel" format="color" />
        <attr name="darkColorGrid" format="color" />
    </declare-styleable>

    <declare-styleable name="GraphicView" parent="ChartView">
        <attr name="lineWidth" />
    </declare-styleable>

    <declare-styleable name="XAxisView" parent="ChartView">
        <attr name="legendTextSize" />
        <attr name="abscissaLegendPaddingLeft" />
        <attr name="abscissaLegendPaddingRight" />
        <attr name="abscissaLegendLabelMargin" />
        <attr name="abscissaLegendMarginTop" />
    </declare-styleable>

    <declare-styleable name="YAxisView" parent="ChartView">
        <attr name="legendTextSize" />
        <attr name="gridLineWidth" />
        <attr name="legendLineCount" />
        <attr name="ordinateLegendLabelMargin" />
    </declare-styleable>

    <declare-styleable name="ChartControlView">
        <attr name="lightColorInactiveControl" format="color" />
        <attr name="lightColorActiveControl" format="color" />

        <attr name="darkColorInactiveControl" format="color" />
        <attr name="darkColorActiveControl" format="color" />
    </declare-styleable>
</resources>